<Window x:Name="Sword_Damage" x:Class="_09_SwordDamage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_09_SwordDamage"
        mc:Ignorable="d"
        Title="MainWindow" Height="175" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="checkBoxMagic" Grid.Column="1" Content="Magic" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Checked="Magic_Checked" Unchecked="Magic_Unchecked"/>
        <CheckBox x:Name="checkBoxFlaming" Content="Flaming" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Checked="Flaming_Checked" Unchecked="Flaming_Unchecked"/>
        <Button x:Name="buttonRoll" Content="Roll for damage" HorizontalAlignment="Left" Margin="20,10,20,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="257" Click="buttonRoll_Click"/>
        <TextBlock x:Name="displayDamage" HorizontalAlignment="Left" Margin="125,13,0,0" Grid.Row="2" TextWrapping="Wrap" Text="damage" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="50"/>




    </Grid>
</Window>
