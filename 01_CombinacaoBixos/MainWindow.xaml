<Window x:Class="Projetos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projetos"
        mc:Ignorable="d"
        Title="Find all of the matching animals" Height="500" Width="400">

    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <!-- ColumnDefinition - escrito assim para espaçamento entre linhas de coluna serem iguais, mesma coisa nas linhas -->
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Column="1" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Column="2" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Column="3" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Row="1" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Row="1" Grid.Column="1" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Row="1" Grid.Column="2" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Row="1" Grid.Column="3" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Row="2" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Row="2" Grid.Column="1" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Row="2" Grid.Column="2" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Row="2" Grid.Column="3" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Row="3" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Row="3" Grid.Column="1" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Row="3" Grid.Column="2" Click="Button_Click"/>
        <Button Content="?" FontSize="36" HorizontalAlignment="Center" Height="97" VerticalAlignment="Center" Width="100" Grid.Row="3" Grid.Column="3" Click="Button_Click"/>
        <Button Content="Start" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="97" Width="200" FontSize="36" Click="StartAndStopButton_Click" x:Name="startButton"/>
        <TextBlock Grid.Column="2" Grid.Row="4" TextWrapping="Wrap" Grid.ColumnSpan="2" Width="200" FontSize="36" Text="00:00" HorizontalAlignment="Left" TextAlignment="Center" Margin="0,20,0,-20" x:Name="timeTextBlock"/>


    </Grid>



</Window>
